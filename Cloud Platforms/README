####################################
# Install Software on Raspnerry Pi #
####################################

# install gspread Google Sheets Python API and OAuth2
pi@xyzpi: ~ $ sudo apt-get update
pi@xyzpi: ~ $ sudo apt-get install git python-dev
pi@xyzpi: ~ $ sudo apt-get install build-essential python-smbus python-openssl
pi@xyzpi: ~ $ sudo apt-get install -U gspread oauth2client

# install Adafruit_Python_DHT library on Raspberry Pi
pi@xyzpi: ~ $ git clone https://github.com/adafruit/Adafruit_python_DHT.git
pi@xyzpi: ~ $ cd *DHT
pi@xyzpi: ~/Adafruit_Python_DHT $ sudo python setup.py install

# install Adafruit_Python_BMP library on Raspberry Pi
pi@xyzpi: ~ $ git clone https://github.com/adafruit_Python_BMP.git
pi@xyzpi: ~ $ cd *BMP
pi@xyzpi: ~/Adafruit_Python_BMP $ sudo python setup.py install
